<Window x:Class="podgEkz.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:podgEkz"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="45"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="45"/>
        </Grid.RowDefinitions>

        <Frame Grid.Row="1" Name="MainFrame" Source="TestPage.xaml"/>

        <TextBlock x:Name="TextBlockDateTime" Grid.Row="2" 
           HorizontalAlignment="Right" 
           VerticalAlignment="Center" Margin="10"/>

        <Button Name="ButtonBack" Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Center"
        Content="Назад"
        Margin="5,0,0,0" Click="ButtonBack_Click"/>
    </Grid>
</Window>
